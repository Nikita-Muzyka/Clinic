<Page x:Class="Clinic.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="AppointmentPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!--Пациенты-->
        <TextBlock Text="Пациенты"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <ListBox x:Name="patientList"
                 Grid.Row="1"
                 Focusable="False"
                 SelectionChanged="patientList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FirstName}"/>
                        <TextBlock Text="{Binding LastName}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--Врачи-->
        <TextBlock Text="Врачи"
                   Grid.Column="1"
                   Grid.Row="0"
             FontSize="20"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"/>
        <ListBox Grid.Column="1"
                 Grid.Row="1"
                 Name="workerList"
                 SelectionChanged="workerList_SelectionChanged"
                 Focusable="False">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FirstName}"/>
                        <TextBlock Text="{Binding LastName}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--Date-->
        <DatePicker Grid.Row="1"
              Grid.Column="2"
              Name="datebirthBox"
              SelectedDateFormat="Short"
              Text="Выберите дату роджения"
              ToolTip="Выберите дату рождения"
              Style="{StaticResource DatePickerCreatePatient}">
        </DatePicker>
        
        <!--Button Create-->
        <Button Content="Create"
                Click="CreateApp"
                Grid.Column="1"
                Grid.Row="2"/>
    </Grid>
</Page>
