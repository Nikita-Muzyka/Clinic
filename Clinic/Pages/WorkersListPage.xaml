<Page x:Class="Clinic.Pages.WorkersListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkersListPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Name="workersListBox" 
                Grid.Column="0"
                Margin="5"
                SelectionChanged="workersListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding LastName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding FirstName}"/>
                        <TextBlock Text="{Binding Patronymic}"/>
                        <TextBlock Text="{Binding Role}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1"
                   Name="infoWorkers"
                   Background="White"
                   Margin ="5"
                   DataContext="{Binding SelectedItem, ElementName=workersListBox}"
                   Visibility="Collapsed">

            <TextBlock Text="Имя"
                      FontWeight="Bold"/>
            <TextBox Name="firstNameBox"
                    Text="{Binding FirstName}"/>


            <TextBlock Text="Фамилия"
          FontWeight="Bold"/>
            <TextBox Name="lastNameBox"
                    Text="{Binding LastName}"/>


            <TextBlock Text="Отчество"
          FontWeight="Bold"/>
            <TextBox Name="patronymicBox"
                    Text="{Binding Patronymic}"/>


            <TextBlock Text="Пол"
          FontWeight="Bold"/>
            <TextBox Name="genderBox"
                    Text="{Binding Gender}"/>


            <TextBlock Text="Телефон"
          FontWeight="Bold"/>
            <TextBox Name="phoneBox"
                    Text="{Binding Phone}"/>


            <TextBlock Text="Email"
                      FontWeight="Bold"/>
            <TextBox Name="emailBox"
                    Text="{Binding Email}"/>


            <TextBlock Text="Дата Рождения"
          FontWeight="Bold"/>
            <TextBox Name="dateBrithBox"
                    Text="{Binding DateBrith}"/>



            <TextBlock Text="Место проживания"
          FontWeight="Bold"/>
            <TextBox Name="placeBox"
                    Text="{Binding Place}"/>


            <TextBlock Text="Должность"
          FontWeight="Bold"/>
            <TextBox Name="roleBox"
                    Text="{Binding Role}"/>

            <TextBlock Text="Зарплата"
          FontWeight="Bold"/>
            <TextBox Name="salaryBox"
                    Text="{Binding Salary}"/>


            <Button Content="Сохранить изменения"
                   Click ="SaveWorker_btn"/>
            <Button Content="Удалить пациента"
        Click ="DeleteWorker_btn"/>

        </StackPanel>
    </Grid>
</Page>
