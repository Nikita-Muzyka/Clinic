<Page x:Class="Clinic.Pages.CreateWorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="CreateWorkerPage">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основная форма -->
        <Border Grid.Row="0"
              CornerRadius="20"
              Background="White"
              Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Имя -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                             Text="Имя:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                           Margin="2"
                           Name="firstNameBox"/>

                    <!-- Фамилия -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                             Text="Фамилия:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                           Margin="2"
                           Name="lastNameBox"/>

                    <!-- Отчество -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                             Text="Отчество:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                           Margin="2"
                           Name="patronymicBox"/>

                    <!-- Дата рождения -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                             Text="Дата рождения:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <DatePicker Grid.Row="3"
                              Grid.Column="1"
                              Name="datebirthBox"
                              SelectedDateFormat="Short"
                              Text="Выберите дату роджения"
                              ToolTip="Выберите дату рождения"
                              Style="{StaticResource DatePickerCreatePatient}">
                    </DatePicker>

                    <!-- Пол -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                             Text="Пол:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <ComboBox Grid.Row="4" Grid.Column="1"
                            Margin="2"
                            Name="genderBox">
                        <ComboBoxItem>Мужской</ComboBoxItem>
                        <ComboBoxItem>Женский</ComboBoxItem>
                    </ComboBox>

                    <!-- Телефон -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                             Text="Телефон:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <TextBox Grid.Row="5" Grid.Column="1"
                           Margin="2"
                           Name="phoneBox"
                             Text="+7"/>

                    <!-- email -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                             Text="Email:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <TextBox Grid.Row="6" Grid.Column="1"
                           Margin="2"
                           Name="emailBox"/>

                    <!-- Место проживания -->
                        <TextBlock Grid.Row="7" 
                                   Grid.Column="0"
                                   Text="Место проживания:"
                                   Margin="2"
                                   VerticalAlignment="Center"
                                   FontSize="16"/>
                        <TextBox Grid.Row="7" 
                                 Grid.Column="1"
                                 Margin="2"
                                 Name="placeBox"/>

                        <!-- Зарплата -->
                    <TextBlock Grid.Row="8" Grid.Column="0"
                             Text="Зарплата:"
                             Margin="2"
                             VerticalAlignment="Center"
                             FontSize="16"/>
                    <TextBox Grid.Row="8" Grid.Column="1"
                           Margin="2"
                           Name="salaryBox"/>

                    <!-- Роль -->
                    <TextBlock Grid.Row="9" 
                               Grid.Column="0"
                               Text="Должность:"
                               Margin="2"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <ComboBox Grid.Column="1"
                              Grid.Row="9"
                              Name="roleBox"
                              SelectedValuePath="Text">
                        <TextBlock Text="Глав.Врач"/>
                        <TextBlock Text="Зам.Глав.Врача"/>
                        <TextBlock Text="Зав.Отделения"/>
                        <TextBlock Text="Доктор"/>
                        <TextBlock Text="Регистратура"/>
                        <TextBlock Text="Мед.Сестра"/>
                    </ComboBox>


                    <!-- Login -->
                    <TextBlock Grid.Row="10"
                               Grid.Column="0"
                               Text="Логин:"
                               Margin="2"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="10"
                             Grid.Column="1"
                             Margin="2"
                             Name="logBox"/>

                    <!-- Password -->
                    <TextBlock Grid.Row="11"
                               Grid.Column="0"
                               Text="Пароль:"
                               Margin="2"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="11"
                             Grid.Column="1"
                             Margin="2"
                             Name="passBox"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Кнопка создания -->
        <Button Grid.Row="1"
              Name="CreateBtn"
              Content="Создать"
              HorizontalAlignment="Center"
              Margin="0,15,0,0"
              Padding="30,0"
              FontSize="16"
              Click ="CreateBtn_Click"/>
    </Grid>
</Page>
