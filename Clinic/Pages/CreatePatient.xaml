<Page x:Class="Clinic.Pages.CreatePatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="750"
      Title="CreatePatient">

    <!--Main Grid-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Row 1-->
        <Border Grid.Row="0"
                CornerRadius="30"
                Background="White"
                Margin="0,5,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="170"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16">Имя :</TextBlock>
                <TextBox  Grid.Row="1"
           Grid.Column="2"
           Name="firstNameBox"/>

                <TextBlock  Grid.Row="2"
             Grid.Column="1"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             FontSize="16">Фамилия :</TextBlock>
                <TextBox  Grid.Row="2"
           Grid.Column="2"
           Name="lastNameBox"/>

                <TextBlock  Grid.Row="3"
             Grid.Column="1"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             FontSize="16">Отчество :</TextBlock>
                <TextBox  Grid.Row="3"
           Grid.Column="2"
           Name="PatronymicBox"/>

                <TextBlock  Grid.Row="4"
             Grid.Column="1"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             FontSize="16">Возраст :</TextBlock>
                <TextBox Grid.Row="4"
          Grid.Column="2"
          Name="AgeBox"/>

                <TextBlock Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16">Пол :</TextBlock>
                <!--<TextBox  Grid.Row="5"
           Grid.Column="2"
           Name="GenderBox"/>-->
                <ComboBox Grid.Row="5"
                          Grid.Column="2"
                          Name="BoxGender">
                    <TextBlock>Мужской</TextBlock>
                    <TextBlock>Женский</TextBlock>
                </ComboBox>

                <TextBlock Grid.Row="6"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16">Вес :</TextBlock>
                <TextBox Grid.Row="6"
          Grid.Column="2"
          Name="WeightBox"/>

                <TextBlock  Grid.Row="7"
             Grid.Column="1"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             FontSize="16">Контакты :</TextBlock>
                <TextBox  Grid.Row="7"
           Grid.Column="2"
           Name="ContactBox"/>

                <TextBlock Grid.Row="8"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16">Место проживания :</TextBlock>
                <TextBox Grid.Row="8"
          Grid.Column="2"
          Name="PlaceBox"/>

                <TextBlock Grid.Row="9"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16">Дигноз :</TextBlock>
                <TextBox Grid.Row="9"
          Grid.Column="2" 
          Name="DiagnosisBox"/>
            </Grid>
        </Border>

        <!--Row 1-->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="30"
                Margin="0,5,0,0"></Border>
        <Button
            Grid.Row="1"
            Click="Create_Button" 
            Height="60" 
            Width="202" 
            Margin="0,40,0,0" 
            VerticalAlignment="Top">Создать</Button>

    </Grid>
</Page>
