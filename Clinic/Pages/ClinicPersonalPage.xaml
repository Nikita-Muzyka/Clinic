<Page x:Class="Clinic.Pages.ClinicPersonalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:Clinic.Pages"
      xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="ClinicPersonalPage">

    <Grid>
        <!-- Используем пропорциональное распределение пространства -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
            <!-- Для меню -->
            <ColumnDefinition Width="5"/>
            <!-- Разделитель -->
            <ColumnDefinition Width="*"/>
            <!-- Основное содержимое -->
        </Grid.ColumnDefinitions>

        <!-- Левая панель - меню -->
        <Border Grid.Column="0"
             Padding="15">
            <StackPanel VerticalAlignment="Center">
                <RadioButton Content="Создать работника"
                          Click="CreateWorker_btn"
                          Style="{StaticResource RadioButtonRegPage}"
                          Margin="0,10"/>

                <RadioButton Content="Карточки пациентов"
                          Style="{StaticResource RadioButtonRegPage}"
                          Margin="0,10"/>

                <RadioButton Content="Записать на прием"
                          Style="{StaticResource RadioButtonRegPage}"
                          Margin="0,10"/>

            </StackPanel>
        </Border>

        <!-- Вертикальный разделитель -->
        <GridSplitter Grid.Column="1"
                   Width="5"
                   HorizontalAlignment="Stretch"
                   Background="LightGray"
                   ResizeBehavior="PreviousAndNext"/>

        <Grid Grid.Column="2">
            <Frame NavigationUIVisibility="Hidden"
                Name="PersonFrame"
                BorderBrush="Transparent"></Frame>
        </Grid>
    </Grid>
</Page>
