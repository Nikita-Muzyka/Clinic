<Page x:Class="Clinic.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="730" d:DesignWidth="1000"
      Title="RegistrationPage">

        <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Grid Column 0-->
        <Viewbox Stretch="Uniform">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Row="0"
                             Click ="CreatePatient_Button"
                             Style="{StaticResource RadioButtonRegPage}"
                >Создать пациента</RadioButton>

                <RadioButton Grid.Row="1"
                             Click="ListPatient_Button"
                             Style="{StaticResource RadioButtonRegPage}"
                >Карточки пациентов</RadioButton>

                <RadioButton Grid.Row="2"
                             Click="AppointmentCreate_Button" 
                             Style="{StaticResource RadioButtonRegPage}"
                >Записать на прием</RadioButton>

            </Grid>
    </Viewbox>
        <Grid Grid.Column="1">
            <Frame NavigationUIVisibility="Hidden"
                   Name="RegFrame"
                   BorderBrush="Transparent"></Frame>
        </Grid>
    </Grid>
</Page>
