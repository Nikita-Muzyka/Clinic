<Page x:Class="Clinic.Pages.CreatePatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages" 
      xmlns:System="clr-namespace:System;assembly=System.Runtime"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Создание пациента"
      Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основная форма -->
        <Border Grid.Row="0"
                CornerRadius="20"
                Background="White"
                Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Имя -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Имя:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="0" 
                             Grid.Column="1"
                             Margin="5"
                             Text="{Binding FirstName,UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Фамилия -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Фамилия:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Margin="5"
                             Name="lastNameBox"/>

                    <!-- Отчество -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Отчество:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Margin="5"
                             Name="patronymicBox"/>

                    <!-- Дата рождения -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Дата рождения:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <DatePicker Grid.Row="3"
                                Grid.Column="1"
                                Name="datebirthBox"
                                SelectedDateFormat="Short"
                                Text="Выберите дату роджения"
                                ToolTip="Выберите дату рождения"
                                Style="{StaticResource DatePickerCreatePatient}">
                    </DatePicker>

                    <!-- Пол -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Пол:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <ComboBox Grid.Row="4" Grid.Column="1"
                              Margin="5"
                              Name="genderBox">
                        <ComboBoxItem>Мужской</ComboBoxItem>
                        <ComboBoxItem>Женский</ComboBoxItem>
                    </ComboBox>

                    <!-- Вес -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Text="Вес:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="5" Grid.Column="1"
                             Margin="5"
                             Name="weightBox"/>

                    <!-- Phone -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="Телефон:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="6" 
                             Grid.Column="1"
                             Margin="5"
                             Text="+7"
                             Name="phoneBox"/>

                    <!-- Email -->
                    <TextBlock Grid.Row="7" Grid.Column="0"
                               Text="Email:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="7" Grid.Column="1"
                             Margin="5"
                             Name="emailBox"/>

                    <!-- Место проживания -->
                    <TextBlock Grid.Row="8" Grid.Column="0"
                               Text="Место проживания:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="8" Grid.Column="1"
                             Margin="5"
                             Name="placeBox"/>

                    <!-- Диагноз -->
                    <TextBlock Grid.Row="9" Grid.Column="0"
                               Text="Диагноз:"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <TextBox Grid.Row="9" Grid.Column="1"
                             Margin="5"
                             Name="diagnosisBox"/>

                   
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Кнопка создания -->
        <Button Grid.Row="1"
                Content="Создать"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Padding="30,0"
                FontSize="16"
                Command="{Binding command}"/>
    </Grid>
</Page>