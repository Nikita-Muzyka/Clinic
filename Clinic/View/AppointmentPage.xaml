<Page x:Class="Clinic.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="AppointmentPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!--Пациенты-->
        <GroupBox Grid.Row="0"
                  Header="Пациент">
             <ListBox Grid.Row="1"
                      ItemsSource="{Binding Patients}"
                      SelectedItem="{Binding SelectedPatient}">
     <ListBox.ItemTemplate>
         <DataTemplate>
             <StackPanel>
                 <TextBlock Text="{Binding FirstName}"/>
                 <TextBlock Text="{Binding LastName}"/>
                 <TextBlock Text="{Binding Patronymic}"/>
             </StackPanel>
         </DataTemplate>
     </ListBox.ItemTemplate>
 </ListBox>
        </GroupBox>

        <!--Врачи-->
        <GroupBox Grid.Row="0"
                  Grid.Column="1"
           Header="Врачи">
            <ListBox Grid.Column="1"
                     Grid.Row="1"
                     ItemsSource="{Binding Workers}"
                     SelectedItem="{Binding SelectedWorker}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding FirstName}"/>
                            <TextBlock Text="{Binding LastName}"/>
                            <TextBlock Text="{Binding Patronymic}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!--Date-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0"
                      Grid.Column="2"
                      Header="Дата приема">
                <DatePicker Name="datebirthBox"
                            SelectedDateFormat="Short"
                            Style="{StaticResource DatePickerCreatePatient}"
                            SelectedDate="{Binding Date, Mode=TwoWay}">
                </DatePicker>
            </GroupBox>
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding TimeSlotsCollection}"
                     SelectedItem="{Binding SelectedTimeSlot}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Time}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!--Button Create-->
        <Button Content="Создать прием"
                Command="{Binding CreateAppointmentCommand}"
                Grid.Column="1"
                Grid.Row="2"/>
    </Grid>
</Page>
