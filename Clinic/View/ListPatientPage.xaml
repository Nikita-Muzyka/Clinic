<Page x:Class="Clinic.Pages.ListPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="ListPatientPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0"
                 Margin="5"
                 ItemsSource="{Binding Patients}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding LastName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding FirstName}"/>
                        <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1"
                    Name="infoPatient"
                    Margin ="5"
                    Visibility="Visible">

            <Button Content="Изменить"
                    Command="{Binding ChangePatientCommand}"/>
            <Button Content="Удалить пациента"/>

        </StackPanel>
    </Grid>
</Page>
