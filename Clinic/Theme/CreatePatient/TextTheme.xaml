<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="TextBlockTheme">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FontsTextLight}"/>
    </Style>


    <Style TargetType="TextBox" x:Key="TextBoxTheme">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5,0,0,0"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <!-- Внешняя граница -->
                        <Border x:Name="border"
                            CornerRadius="8"
                            Background="{DynamicResource BackgroundTextBox}"
                            BorderThickness="1.5"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <!-- Основной контейнер для текста -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                    Margin="{TemplateBinding Padding}"
                                    Background="Transparent"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                        </Border>

                        <!-- Плейсхолдер (подсказка) -->
                        <TextBlock x:Name="placeholder"
                              Text="Введите текст..."
                              Foreground="{DynamicResource BackgroundTextBlockPlaicholder}"
                              Margin="8,0"
                                   Padding="5"
                              VerticalAlignment="Center"
                              Visibility="Collapsed"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Показывать плейсхолдер когда текста нет -->
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Эффекты при фокусе -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BrushFocusText}"/>
                        </Trigger>

                        <!-- Эффекты при наведении -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BrushFocusText}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>