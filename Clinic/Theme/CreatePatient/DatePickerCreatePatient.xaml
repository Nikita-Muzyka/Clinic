<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="DatePicker" x:Key="DatePickerCreatePatient">
        <Setter Property="DisplayDateStart" Value="01.01.1920"/>
        <Setter Property="SelectedDateFormat" Value="Short"/>
        <Setter Property="ToolTip" Value="{Binding ToolTipCollection[3]}"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="BorderBrush" Value="{Binding BrushCollection[3]}"/>
    </Style>
</ResourceDictionary>