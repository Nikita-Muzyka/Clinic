<Application x:Class="Clinic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Подключаем стили HandyControl -->
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <!-- Темы для приложения -->
                <ResourceDictionary Source="/Theme/MainWindowTheme/DarkTheme.xaml"/>
                <!-- Кнопки управление окном -->
                <ResourceDictionary Source="/Theme/MainWindowTheme/RegButtonClose.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Theme/MainWindowTheme/RevalButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/MainWindowTheme/HideButtonTheme.xaml"/>
                <!-- Кнопки управления боковым окном в главном экране -->
                <ResourceDictionary Source="/Theme/MainWindowTheme/RadioButtonMainTheme.xaml"/>
                <!-- Text -->
                <ResourceDictionary Source="/Theme/MainWindowTheme/WelcomeTheme.xaml"/>
                <ResourceDictionary Source="/Theme/CreatePatient/TextTheme.xaml"/>


                <ResourceDictionary Source="/Theme/RegistrationPage/RadioButtonRegPage.xaml"/>

                <ResourceDictionary Source="/Theme/CreatePatient/DatePickerCreatePatient.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
